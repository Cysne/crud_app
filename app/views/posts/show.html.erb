<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Detalhes do Post <%= @post.id %></h4>
  </div>
</div>
</div>
<article class="blog-post">
  <h2 class="blog-post-title mb-1"><%= @post.titulo%></h2>
  <p class="blog-post-meta"><%= date_time(@post.created_at)%> <a href="#"></a></p>
  <p>
    <%= @post.Descricao %>
  </p>
  <div class="d-grid gap-3 d-md-block">
    <%= link_to 'Deletar', post_path(@post.id), class:"btn btn-danger", data: { confirm: 'Confirmar?', turbo_method: :delete, } %>
    <%= link_to  'Editar',edit_post_path(@post),class:"btn btn-primary" %>
  </div>
</article>
