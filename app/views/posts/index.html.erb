<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Lista de Posts</h4>
  </div>
  <br>
  <br>
  <hr>
  <div class="p-3 mb-2 bg-light text-dark">
    <span class="text-info font-weight-bold">Bem vindo! </span>
    Crie a sua primeira Postagem
    <br>
    <br>
    <button type="button" class="btn btn-outline-primary"> <%= link_to 'Criar Postagem', new_post_path %></button>
  </div>
<% if @posts.present? %>
 <br>
  <hr>
    <div class="row justify-content-center">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Titulo</th>
            <th scope="col">Descrição</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
            <tr>
              <td><%= post.titulo %></td>
              <td><%= post.Descricao %></td>
              <td><%= link_to 'Exibir', post_path(post.id) %></td>
              <td><%= link_to 'Delete', post_path(post.id),  data: { confirm: 'Confirmar?', turbo_method: :delete } %></td>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
  <% else %>
  <% end %>
</div>

</div>
