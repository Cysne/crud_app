<div class="container">
  <div class="row justify-content-center">
    
  </div>
  <br>
  <br>
  <hr>
  <%=render 'posts/longer_featured'%>
  
<% if @posts.present? %>
 <br>
  <hr>
    <div class="row justify-content-center">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Titulo</th>
            <th scope="col">Descrição</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
            <tr>
              <td><%= post.titulo %></td>
              <td><%= post.Descricao %></td>
              <td><%= link_to 'Exibir', post_path(post.id) %></td>
              <td><%= link_to 'Delete', post_path(post.id),  data: { confirm: 'Confirmar?', turbo_method: :delete } %></td>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
  <% else %>
  <% end %>
</div>

</div>
